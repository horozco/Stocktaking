<fieldset>
    <legend>Inventories</legend>
	<div class = "form_inventory">
			<%if @inventories.size > 0 %>
				<%@inventories.each do |inventory| %>
					<div class = "well">
					<h3><%=link_to inventory.site, user_inventory_path(current_user,inventory)%></h3>
					<h4><%=inventory.details%></h4>
					<%=link_to "Delete", user_inventory_path(current_user,inventory), method: :delete, data:{confirm: "Are you sure your want to delete this post?"}, class: "btn"%>
					</div>
				<%end%>
			<%else%>
				<div class = "well">
				<h3>No hay ningún inventario aún</h3>
				</div>	
			<%end%>
	</div>
	<%=link_to "Create a new Inventory", new_user_inventory_path, class: "btn btn-primary"%>
</fieldset>